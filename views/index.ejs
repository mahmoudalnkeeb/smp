<body>
    <div class="container-fluid p-lg-1 w-100 ">
        <nav class="navbar navbar-light bg-light w-100 shadow mb-3 ps-4">
            <h1 class="text-success">API DOCS</h1>
        </nav>
        <div class="docs p-2">
            <ul>
                <li class="section">
                    <h2 class=" badge text-bg-success">/users</h2>
                    <div class="table-responsive">
                        <table class="table table-success">
                            <thead>
                                <tr>
                                    <th scope="col">description</th>
                                    <th scope="col">path</th>
                                    <th scope="col">method</th>
                                    <th scope="col">body</th>
                                    <th scope="col">parameters</th>
                                    <th scope="col">queries</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">signup new user account</th>
                                    <td>/users/signup</td>
                                    <td>POST</td>
                                    <td>
                                        <code>
                                        {
                                            <br> &nbsp&nbsp&nbsp "fname":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "lname":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "username":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "password":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "email":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "phone":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "dob":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "gender":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "country":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "bio":"string"<br>
                                            <br> &nbsp&nbsp&nbsp "profile":"file/image"<br>
                                        }
                                    </code>
                                    </td>
                                    <td>--</td>
                                    <td>--</td>
                                </tr>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">login to account</th>
                                    <td>/users/login</td>
                                    <td>
                                        POST
                                    </td>
                                    <td>
                                        <code>
                                            {
                                                <br>&nbsp&nbsp&nbsp"lname":"string"<br>
                                                <br>&nbsp&nbsp&nbsp"username":"string"<br>
                                                }
                                        </code>
                                    </td>
                                    <td>--</td>
                                    <td>--</td>
                                </tr>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">get user data by id (profile)</th>
                                    <td>/users/:id</td>
                                    <td>GET</td>
                                    <td>--</td>
                                    <td>id : string</td>
                                    <td>--</td>
                                </tr>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">logout from account</th>
                                    <td>/logout</td>
                                    <td>POST</td>
                                    <td>--</td>
                                    <td>--</td>
                                    <td>--</td>
                                </tr>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">follow another user</th>
                                    <td>/users/follow/:followId</td>
                                    <td>PUT</td>
                                    <td>--</td>
                                    <td>followId : string</td>
                                    <td>--</td>
                                </tr>

                                <tr>
                                    <th style="vertical-align: middle;" scope="row">unfollow followed user</th>
                                    <td>/users/follow/:unfollowId</td>
                                    <td>PUT</td>
                                    <td>--</td>
                                    <td>unfollowId : string</td>
                                    <td>--</td>
                                </tr>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">update name</th>
                                    <td>/users/name</td>
                                    <td>PUT</td>
                                    <td><code>
                                        {<br>&nbsp&nbsp&nbsp"fname":"string"<br>
                                        <br>&nbsp&nbsp&nbsp"lname":"string"<br>
                                        }
                                    </code></td>
                                    <td>--</td>
                                    <td>--</td>
                                </tr>
                                <tr>
                                    <th style="vertical-align: middle;" scope="row">update password</th>
                                    <td>/users/password</td>
                                    <td>PUT</td>
                                    <td><code>
                                        {<br>&nbsp&nbsp&nbsp"newPass":"string"<br>
                                        <br>&nbsp&nbsp&nbsp"oldPass":"string"<br>
                                        }
                                    </code></td>
                                    <td>--</td>
                                    <td>--</td>
                                </tr>

                            </tbody>

                        </table>
                    </div>
                </li>
                <li class="section">
                    <h2 class="badge text-bg-success">/posts</h2>
                    <ul></ul>
